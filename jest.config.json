{
  "collectCoverage": true,
  "roots": [
    "<rootDir>/src"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/src/common/test/*.ts",
    "/entities"
  ],
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.service.ts",
    "<rootDir>/src/**/*.controller.ts",
    "!<rootDir>/src/pdf/*.ts"
  ],
  "testMatch": [
    "/tests //*.spec.ts",
    "**/__tests__ /**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}