{
  "collectCoverage": true,
  "roots": [
    "<rootDir>/src/"
  ],
  "modulePathIgnorePatterns": [
    "src/common/test/"
  ],
  "testMatch": [
    "/tests //*.spec.ts",
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}